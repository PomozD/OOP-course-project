<Page x:Class="courseProject.Dogs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:courseProject"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1500"
      Title="Dogs">
    <ScrollViewer HorizontalScrollBarVisibility="Hidden">
        <Border VerticalAlignment="Top" MaxWidth="1000" HorizontalAlignment="Left">
            <Grid Width="1100" HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" x:Name="h1" Orientation="Vertical" VerticalAlignment="Top" Height="108">
                    <TextBlock  HorizontalAlignment="Center" FontSize="32" FontWeight="Regular" FontFamily="Roboto" Margin="0,20,0,0"><Run Text="Собаки"/></TextBlock>
                    <Rectangle Height="1" VerticalAlignment="Bottom" Fill="#6527F2" Margin="90,20,0,0"></Rectangle>
                </StackPanel>
                <WrapPanel x:Name="WrapPanelGrid" Orientation="Horizontal" HorizontalAlignment="Left"  Grid.Row="1" Margin="0,2,0,-2.2">

                </WrapPanel>


            </Grid>
        </Border>
    </ScrollViewer>
</Page>
